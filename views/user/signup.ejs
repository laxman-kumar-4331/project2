<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <h2 class="col-6 offset-5">SignUp</h2>
    <div class="col-6 offset-3">
         <form  method="POST" action="/signup" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input name="email"  type="email" id="email" class="form-control" required>
            </div>
            <div class="mb-3 mt-2">
                <label for="username" class="form-label">Username</label>
                <input name="username"  type="text" id="username" class="form-control" required>
                  <div class="valid-feedback">
                     Looks good!
                  </div>
            </div>
            
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input name="password"  type="password" id="password" class="form-control" required>
            </div>
            <button class="btn btn-outline-success mb-5">SignUp</button>
         </form>    
         
    </div>
</div>