<div class="row row-cols-lg-4 row-cols-md-2 row-cols-xs-1 mt-4" >
    <%for(let listing of allListings){%>
      <a href="listings/<%= listing._id%>" class="listing-link">
        <div class="card col listing-card">
           <img src="<%= listing.image.url %>" class="card-img-top" alt="listings-image" style="height: 20rem;">
           <div class="card-img-overlay"></div>
           <div class="card-body">
              <p class="card-text card-info">
               <b> <%= listing.title %></b><br>
               &#8377; <%= listing.price.toLocaleString("en-IN") %>
               <!-- <i class="onClick">20% GST </i> -->
              </p>
              
            </div>
        </div>
      </a>
      <%}%>
</div>
</div>

<script>
  let btn=document.getElementById("flexSwitchCheckDefault");
  btn.addEventListener("click",() =>{
    let onClick=document.getElementsByClassName("onClick");
    for(info of onClick){
      if(info.style.display != "inline"){
        info.style.display="inline";
      }
      else{
        info.style.display="none"
      }
    }
  })

</script>